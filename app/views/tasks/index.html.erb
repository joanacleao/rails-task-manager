
<div class="container">
  <h1>My Tasks</h1>

  <div class="card">
    <div class="container-list">
      <% @tasks.each do |task| %>
      <div class = "list">
        <% if task.completed == true %>
        <i class="far fa-check-square"></i> <%= link_to task.title, task_path(task) %>
        <% else %>
        <i class="far fa-square"></i> <%= link_to task.title, task_path(task) %>
        <% end %>

        <%= link_to task_path(task),
        method: :delete,
        data: { confirm: "Are you sure?" },  class: "btn btn-default" do %>
        <i class='far fa-trash-alt'></i>
        <% end %>
      </div>
      <% end %>
    </div>
    <div class = "new">
      <%= link_to "+ New task", new_task_path %>
    </div>
  </div>



